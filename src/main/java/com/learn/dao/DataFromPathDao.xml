<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.learn.dao.DataFromPathDao">

    <!-- 可根据自己的需求，是否要使用
    -->
    <resultMap type="com.learn.entity.DataFromPathEntity" id="dataMap">
        <result property="id" column="id"/>
        <result property="appId" column="app_id"/>
        <result property="companyKey" column="companykey"/>
        <result property="appName" column="app_name"/>
        <result property="pathName" column="path_name"/>
        <result property="callback" column="callback"/>
        <result property="uniqueId" column="unique_id"/>
        <result property="time" column="time"/>
        <result property="idfa" column="idfa"/>
        <result property="isReportSuccess" column="is_report_success"/>
    </resultMap>

    <select id="queryObject" resultType="com.learn.entity.DataFromPathEntity">
		select * from data_from_path where id = #{value}
	</select>

    <select id="tj" resultType="double">
		select avg(fs) from data_from_path
    </select>
    <select id="queryList" resultType="com.learn.entity.DataFromPathEntity">
        select * from data_from_path where 1=1

        <if test="idfa != null and idfa != ''">
            and idfa like '%${idfa}%'
        </if>
        order by id desc

    </select>
    <select id="getDataFromPathByUID" resultType="com.learn.entity.DataFromPathEntity">
        select * from  data_from_path where unique_id like '%${uid}%'
    </select>

    <select id="queryTotal" resultType="int">
        select count(*) from data_from_path where 1=1
        <if test="idfa != null and idfa != ''">
            and path like '%${idfa}%'
        </if>

    </select>

    <insert id="save" parameterType="com.learn.entity.DataFromPathEntity" useGeneratedKeys="true" keyProperty="id">
		insert into data_from_path
		(
			`app_id`,
			`companykey`,`app_name`,`path_name`,`callback`,`unique_id`,`time`,`idfa`,`is_report_success`
		)
		values
		(
			#{appId},
			#{companyKey},#{appName},#{pathName},#{callback},#{uniqueId},#{time},#{idfa},#{isReportSuccess}
		)
	</insert>

    <update id="update" parameterType="com.learn.entity.DataFromPathEntity">
        update data_from_path
        <set>
            <if test="appId != null">`app_id` = #{appId},</if>
            <if test="companyKey != null">`companykey` = #{companyKey}</if>
            <if test="appName != null">`app_name` = #{appName},</if>
            <if test="pathName != null">`path_name` = #{pathName},</if>
            <if test="callback != null">`callback` = #{callback},</if>
            <if test="uniqueId != null">`unique_id` = #{uniqueId},</if>
            <if test="time != null">`time` = #{time}</if>
            <if test="idfa != null">`idfa` = #{idfa}</if>
            <if test="isReportSuccess != null">`is_report_success` = #{isReportSuccess}</if>
        </set>
        where id = #{id}
    </update>


    <delete id="delete">
		delete from data_from_path where id = #{value}
	</delete>

    <delete id="deleteBatch">
        delete from data_from_path where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>